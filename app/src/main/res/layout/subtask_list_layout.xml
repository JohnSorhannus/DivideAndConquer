<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:id="@+id/parent_layout">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/stFrag_checkBox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/listChoiceIndicatorMultiple"
            android:button="@null"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/stFrag_sub_task_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub Task Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:layout_toStartOf="@+id/stFrag_checkBox"
            android:layout_alignParentStart="true"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stFrag_sub_task_name"
            android:layout_marginTop="4dp">

            <TextView
                android:id="@+id/stFrag_circle"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="8dp"/>

            <TextView
                android:id="@+id/stFrag_main_task_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Main Task Name" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>